<form id="modalForm" data-id="{{id}}">
  <div class="form_group">
    <label class="clear">Title</label>
    <input type="text" name="title" placeholder="Item 1" value="{{title}}">
  </div>

  <div class="form_group due_date">
    <label for="due" class="clear">Due Date</label>
    <div class="date">
      <select id="day" name="day">
        <option>{{day}}</option>
        <option value="01">1</option>
        <option value="02">2</option>
        <option value="03">3</option>
        <option value="04">4</option>
        <option value="05">5</option>
        <option value="06">6</option>
        <option value="07">7</option>
        <option value="08">8</option>
        <option value="09">9</option>
        <option value="10">10</option>
        <option value="11">11</option>
        <option value="12">12</option>
        <option value="13">13</option>
        <option value="14">14</option>
        <option value="15">15</option>
        <option value="16">16</option>
        <option value="17">17</option>
        <option value="18">18</option>
        <option value="19">19</option>
        <option value="20">20</option>
        <option value="21">21</option>
        <option value="22">22</option>
        <option value="23">23</option>
        <option value="24">24</option>
        <option value="25">25</option>
        <option value="26">26</option>
        <option value="27">27</option>
        <option value="28">28</option>
        <option value="29">29</option>
        <option value="30">30</option>
        <option value="31">31</option>
      </select>  /
      <select id="month" name="month">
        <option>{{month}}</option>
        <option value="01">January</option>
        <option value="02">February</option>
        <option value="03">March</option>
        <option value="04">April</option>
        <option value="05">May</option>
        <option value="06">June</option>
        <option value="07">July</option>
        <option value="08">August</option>
        <option value="09">September</option>
        <option value="10">October</option>
        <option value="11">November</option>
        <option value="12">December</option>
      </select> /
      <select id="year" name="year" placeholder="year">
        <option>{{year}}</option>
        <option>2014</option>
        <option>2015</option>
        <option>2016</option>
        <option>2017</option>
        <option>2018</option>
        <option>2019</option>
        <option>2020</option>
        <option>2021</option>
        <option>2022</option>
        <option>2023</option>
        <option>2024</option>
        <option>2025</option>
      </select>
    </div>
  </div>

  <div class="form_group">
    <label for="description" class="clear">Description</label>
    <textarea id="description" name="description" placeholder="Description" cols="50" rows="10">{{description}}</textarea>
  </div>

  <div class="buttons">
    <input type="submit" value="Save">
    <button class="complete">
      {{#if completed}}
      Mark As Incomplete
      {{else}}
      Mark As Complete
      {{/if}}
    </button>
  </div>
</form>